{
  "short_name": "Chrome Emojis",
  "name": "Chrome markdown emojis",
  "description": "Allow to use markdown emojis code like :tada: ðŸŽ‰ in text inputs",
  "manifest_version": 3,
  "version": "0.3",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./static/js/content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "./static/js/background.js"
  }
}